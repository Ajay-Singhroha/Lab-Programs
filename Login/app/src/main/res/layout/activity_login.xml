<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/lmaintv"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="@string/lmaintv"
        android:textColor="@color/logintv"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/lusertv"
        android:layout_width="76dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="172dp"
        android:gravity="center"
        android:text="@string/lusertv"
        android:textColor="@color/tvcolor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/luseret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lusertv"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/luseret"
        android:gravity="center"
        android:textColorHint="@color/buttoncolor"
        android:textColor="@color/tvcolor" />

    <TextView
        android:id="@+id/lpasstv"
        android:layout_width="72dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/lusertv"
        android:layout_marginBottom="219dp"
        android:text="@string/lpasstv"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/tvcolor" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/lpasset1"
        android:layout_width="221dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/lpasstv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="99dp"

        android:textColorHint="@color/buttoncolor"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lpasset"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/lpasset1"
            android:hint="@string/lpasset"
            android:inputType="textPassword"
            android:textColorHint="@color/buttoncolor" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/loginbutton"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp"
        android:text="@string/loginbutton"
        android:textColor="@color/buttoncolor" />

    <TextView
        android:id="@+id/lrtv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="@string/lrtv"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/lwrong"
        android:layout_width="288dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp"
        android:text="@string/lwrong"
        android:visibility="invisible"
        android:textColor="@color/colorred"
        android:gravity="center"/>
</RelativeLayout>